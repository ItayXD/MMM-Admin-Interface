{
	"title": "Modules",
	"type": "array",
	"format": "tabs",
	"options": {
		"disable_array_delete_all_rows": true,
		"disable_array_delete_last_row": true
	},
	"items": {
		"headerTemplate": "{{ self.module }}",
		"type": "object",
		"options": {
			"collapsed": true
		},
		"format": "grid",
		"properties": {
			"module": {
				"type": "string"
			},
			"header": {
				"type": "string"
			},
			"position": {
				"type": "string",
				"enum": [
					"top",
					"bottom",
					"right",
					"left",
					"other"
				],
				"default": "top"
			},
			"config": {
				"title": "configuration",
				"type": "object",
				"options": {
					"collapsed": true
				},
				"properties": {
						"calendars": {
							"format": "tabs",
							"options": {
								"disable_array_delete_all_rows": true,
								"disable_array_delete_last_row": true
							},
							"type": "array",
							"items": {
								"type": "object",
								"headerTemplate": "Calender {{ i1 }}",
								"properties": {
									"symbol": {
										"type": "string"
									},
									"url": {
										"type": "string"
									}
								}
							}
						},
						"compliments": {
							"format": "grid",
							"options": {
								"disable_array_delete_all_rows": true,
								"disable_array_delete_last_row": true
							},
							"type": "object",
							"properties": {
								"morning": {
									"type": "array",
									"format": "table",
									"items": {
										"type": "string"
									}
								},
								"afternoon": {
									"type": "array",
									"format": "table",
									"items": {
										"type": "string"
									}
								},
								"evening": {
									"type": "array",
									"format": "table",
									"items": {
										"type": "string"
									}
								}
							}
						},
						"location": {
							"type": "string"
						},
						"locationID": {
							"type": "string"
						},
						"appid": {
							"type": "string"
						},
						"feeds": {
							"format": "tabs",
							"options": {
								"disable_array_delete_all_rows": true,
								"disable_array_delete_last_row": true
							},
							"type": "array",
							"items": {
								"type": "object",
								"headerTemplate": "{{self.title}}",
								"properties": {
									"title": {
										"type": "string"
									},
									"url": {
										"type": "string"
									},
									"encoding": {
										"type": "string"
									}
								}
							}
						},
						"showSourceTitle": {
							"type": "boolean",
							"format": "checkbox"
						},
						"showPublishDate": {
							"type": "boolean",
							"format": "checkbox"
						}

				}
			}
		}
	},



	"location": {
		"type": "object",
		"title": "Location",
		"properties": {
			"city": {
				"type": "string"
			},
			"state": {
				"type": "string"
			},
			"citystate": {
				"type": "string",
				"description": "This is generated automatically from the previous two fields",
				"template": "{{city}}, {{state}}",
				"watch": {
					"city": "person.location.city",
					"state": "person.location.state"
				}
			}
		}
	},
	"pets": {
		"type": "array",
		"format": "table",
		"title": "Pets",
		"uniqueItems": true,
		"items": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"cat",
						"dog",
						"bird",
						"reptile",
						"other"
					],
					"default": "dog"
				},
				"name": {
					"type": "string"
				},
				"fixed": {
					"type": "boolean",
					"title": "spayed / neutered"
				}
			}
		}
	}

}